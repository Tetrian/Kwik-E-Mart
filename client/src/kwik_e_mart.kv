#:kivy 2.3.0

<OutsideScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: '../res/screenbg/outside.png'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        Label:
            id: lbl
            text: 'Please, wait to enter the store.'
            font_size: 30
            size_hint: None, None

<InsideScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: '../res/screenbg/inside.jpg'
    
    BoxLayout:
        size_hint: 1, .5
        sspacing: 10

        GridLayout:
            id: shelf
            rows: 2
            spacing: 5
            padding: 10
        
        BoxLayout:
            id: cartlayout
            orientation: 'vertical'

            Label:
            Label:
                text: 'Number of Products in the Cart: ' + str(len(root.cart))
            BoxLayout:
                Button:
                    text: 'Remove Last Products'
                    on_press: if root.cart: root.cart.pop()
                Button:
                    text: 'Clear Cart'
                    on_press: del root.cart[:]
            Button:
                text: 'TODO:GoToPay'